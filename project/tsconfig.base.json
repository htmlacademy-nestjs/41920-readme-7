{
  "compileOnSave": false,
  "compilerOptions": {
    "rootDir": ".",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "es2015",
    "module": "esnext",
    "lib": ["es2020", "dom"],
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@project/account/authentication": ["libs/account/authentication/src/index.ts"],
      "@project/auth-notify": ["libs/auth-notify/src/index.ts"],
      "@project/authentication": ["libs/authentication/src/index.ts"],
      "@project/comments": ["libs/comments/src/index.ts"],
      "@project/config": ["libs/config/src/index.ts"],
      "@project/email-subscriber": ["libs/notity/email-subscriber/src/index.ts"],
      "@project/file-config": ["libs/file-vault/file-config/src/index.ts"],
      "@project/file-uploader": ["libs/file-vault/file-uploader/src/index.ts"],
      "@project/likes": ["libs/likes/src/index.ts"],
      "@project/notify-config": ["libs/notity/notify-config/src/index.ts"],
      "@project/pipes": ["libs/shared/pipes/src/index.ts"],
      "@project/posts": ["libs/posts/src/index.ts"],
      "@project/refresh-token-module": [
        "libs/authentication/src/refresh-token-module/src/index.ts"
      ],
      "@project/shared/core": ["libs/shared/core/src/index.ts"],
      "@project/shared/data-access": ["libs/shared/data-access/src/index.ts"],
      "@project/shared/helpers": ["libs/shared/helpers/src/index.ts"],
      "@project/shared/models": ["libs/shared/models/src/index.ts"],
      "@project/types": ["libs/shared/types/src/index.ts"],
      "@project/users": ["libs/users/src/index.ts"]
    }
  },
  "exclude": ["node_modules", "tmp"]
}
